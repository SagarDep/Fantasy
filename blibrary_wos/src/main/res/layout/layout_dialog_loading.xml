<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_rect"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Loading ..."
        android:textColor="#068b7d"
        android:textSize="14sp"/>

    <com.mmga.metroloading.MetroLoadingView
        android:id="@+id/metro_loading"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/tv_loading"
        app:indicator="circle"
        app:indicator_height="9dp"
        app:indicator_width="4dp"
        app:indicator_color="#068b7d"
        />
</RelativeLayout>
