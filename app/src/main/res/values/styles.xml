<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/black_text_matt</item>
        <item name="android:textColorSecondary">@color/black_blue_text</item>

        <item name="android:textViewStyle">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="TranslucentAppTheme" parent="AppTheme">
    </style>

</resources>
