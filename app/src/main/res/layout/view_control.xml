<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary"/>

    <FrameLayout
        android:id="@+id/fl_root"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/statusBar_height">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_album"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:src="@color/colorAccent"
            app:riv_corner_radius="28dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="歌名"/>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="艺术家"/>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="70dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:text="00:00"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="128dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:text="00:00"/>

        <ImageView
            android:id="@+id/iv_previous_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="84dp"
            android:background="@drawable/ripple_btn_oval"
            android:clickable="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@drawable/ic_skip_previous"/>

        <ImageView
            android:id="@+id/iv_play_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="44dp"
            android:background="@drawable/ripple_btn_oval"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_play_arrow"/>

        <ImageView
            android:id="@+id/iv_next_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="2dp"
            android:background="@drawable/ripple_btn_oval"
            android:clickable="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:src="@drawable/ic_skip_next"/>

        <ProgressBar
            android:id="@+id/pb_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-2dp"
            android:hapticFeedbackEnabled="true"
            tools:progress="30"/>
    </FrameLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/statusBar_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="gone"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Hello World"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fac_play_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_arrow"
        app:fabSize="mini"
        app:layout_anchor="@id/fl_root"
        app:layout_anchorGravity="bottom|end"
        tools:visibility="visible"/>
</android.support.design.widget.CoordinatorLayout>
