<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"/>

        <FrameLayout
            android:id="@+id/fl_root"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/statusBar_height">

            <com.wosloveslife.fantasy.ui.LrcView
                android:id="@+id/lrc_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:visibility="gone"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_album"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@color/colorAccent"
                app:riv_corner_radius="28dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="4dp"
                android:ellipsize="marquee"
                android:lines="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="歌名"/>

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="艺术家"/>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="70dp"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                tools:text="00:00"/>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="128dp"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                tools:text="00:00"/>

            <ImageView
                android:id="@+id/iv_previous_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="84dp"
                android:background="@drawable/ripple_btn_oval"
                android:clickable="true"
                android:contentDescription="@null"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_skip_previous"/>

            <ImageView
                android:id="@+id/iv_play_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="44dp"
                android:background="@drawable/ripple_btn_oval"
                android:clickable="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_play_arrow"/>

            <ImageView
                android:id="@+id/iv_next_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="2dp"
                android:background="@drawable/ripple_btn_oval"
                android:clickable="true"
                android:contentDescription="@null"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_skip_next"/>

            <ProgressBar
                android:id="@+id/pb_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-2dp"
                android:hapticFeedbackEnabled="true"
                tools:progress="30"/>

            <TextView
                android:id="@+id/tv_seek_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:background="@drawable/ic_location2"
                android:gravity="center_horizontal"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:paddingTop="10dp"
                android:text="03:20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </FrameLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/statusBar_height"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="gone"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Hello World"/>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fac_play_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:elevation="7dp"
        app:fabSize="mini"
        app:layout_anchor="@id/fl_root"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_play_arrow"
        tools:visibility="visible"/>
</android.support.design.widget.CoordinatorLayout>
