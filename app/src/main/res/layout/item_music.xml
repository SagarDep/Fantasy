<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/ripple_btn">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_more_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ripple_btn"
        android:scaleType="centerInside"
        android:src="@drawable/ic_more_vert"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/tv_id"
        android:ellipsize="marquee"
        android:lines="1"
        android:singleLine="true"
        android:text="歌名歌名歌名歌名歌名歌名歌名歌名歌名名歌名歌名歌名"
        android:textColor="@color/black_blue_text"/>

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignTop="@id/tv_title"
        android:layout_marginLeft="-72dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/tv_title"
        android:scaleType="fitStart"
        android:src="@drawable/ic_volume_up"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_source"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_id"
        android:src="@drawable/ic_from_net"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_toLeftOf="@id/iv_more_btn"
        android:layout_toRightOf="@id/iv_source"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="歌手"
        android:textSize="12sp"/>
</RelativeLayout>