<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_btn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/whitish_common_bg">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_more_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ripple_btn"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_more_btn"
            android:layout_toRightOf="@id/tv_id">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="歌名歌名歌名歌名歌名歌名歌名歌名歌名名歌名歌名歌名"
                    android:textColor="@color/black_blue_text"/>

                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-24dp"
                    android:layout_toRightOf="@id/tv_title"
                    android:src="@drawable/ic_volume_up"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="歌手"
                android:textSize="12sp"/>
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="48dp"
        android:background="@color/gray_light"/>
</FrameLayout>